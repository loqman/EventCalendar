<%= simple_form_for(event, remote: true) do |f| %>
    <%= f.input :title %>
    <%= f.input :start_date_jalali, input_html: { class: 'ltr' } %>
    <%= f.input :start_date, as: :hidden %>
    <%= f.input :end_date_jalali, input_html: { class: 'ltr' } %>
    <%= f.input :end_date, as: :hidden %>
    <%= f.input :description %>
    <%= f.input :color, input_html: { class: 'ltr', style:'width: 77%;', readonly: true, 'data-palette' =>'', value: '#FFEA00'} %>
    <%= f.submit t('buttons.save_event'), class: 'btn btn-outline-primary btn-block' %>
<% end %>