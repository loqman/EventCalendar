<div class="card sign-in">
  <div class="card-header">
    <%= t('.title') %>
  </div>
  <div class="card-block google-login">
    <a href="<%= user_google_oauth2_omniauth_authorize_path %>" class="btn btn-block btn-secondary btn-danger">
      <%= t('links.google_login') %>
      <%= icon 'google' %>
    </a>
  </div>
  <div class="card-block">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: {class: 'ltr'} %>
          <%= f.input :password, required: false, input_html: {class: 'ltr'} %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('buttons.sign_in'), class: 'btn btn-primary btn-block btn-lg' %>
        </div>
    <% end %>

  </div>
  <div class="card-footer text-muted">
    <%= render "devise/shared/links" %>
  </div>
</div>
