<div class="card sign-in">
  <div class="card-header">
    <%= t('.title') %>
  </div>
  <div class="card-block">
    <h4 class="card-title"><%= t('sign_up.info') %></h4>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, input_html: { class: 'ltr' } %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'ltr' } %>
          <%= f.input :password_confirmation, required: true, input_html: { class: 'ltr' } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('buttons.sign_up'), class: 'btn btn-primary btn-block btn-lg' %>
        </div>
    <% end %>

  </div>
  <div class="card-footer text-muted">
    <%= render "devise/shared/links" %>
  </div>
</div>

